<% if @quote.nil? %>
  <h2 class="text-center">Contribute a quote!</h2>
<% else %>
	<h2>
	  <span>SPLURTY / <%= @quote.unique_tag %></span>
	</h2>

	<div class="col-xs-offset-1 col-xs-10 col-xs-offset-1">
	  <h1>"<%= @quote.saying %>"</h1>
	</div>

	<h2 class="pull-right">- <%= @quote.author %></h2>

	<br class="clear" />
	<br />
	<br />
	<br />
<% end %>